-- Override !auth with !noauth
/api/v1/ ApiR !auth:
  /login                JsonLoginR    POST      !noauth
  /signup               SignupR       POST      !noauth
  /game                 GamesR        GET POST
  /game/#GameId         GameR         GET
  /game/#GameId/status  GameStatusR   GET
  /game/#GameId/play    GamePlayR     GET POST
